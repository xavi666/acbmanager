%td= object.id
%td= game_image object
%td= link_to object.name, object
%td= link_to object.team.name, object.team
%td= object.position.text
%td
  - if object.active
    %i.glyphicon.glyphicon-ok
  - else
    %i.glyphicon.glyphicon-remove
%td.actions= smart_listing_item_actions [{name: :custom, url: edit_game_path(object), icon: "glyphicon glyphicon-active", remote: true, if: !object.active?, title:  "Activate game"}, {name: :edit, url: edit_game_path(object)}, {name: :destroy, url: game_path(object), confirmation: "Are you sure you want to delete this?"}]