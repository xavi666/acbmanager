.row
  .col-xs-12
    %h1= @player.name
    
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %tbody
          %tr
            %td.col-xs-2{rowspan: 5}
              = player_image @player
          %tr
            %th= "Position"
            %td= @player.position
          %tr
            %th= "Height"
            %td= @player.height
          %tr
            %th= "Date of Birth"
            %td= @player.date_of_birth.to_s(:short_date)
          %tr 
            %th= "Place of Birth"
            %td= @player.place_of_birth
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %thead.sortable
          %tr
            %th.col-xs-2= "Imatge"
            %th.col-xs-2= "Id"
            %th.col-xs-2= "Nom"
            %th.col-xs-2= "Position"
            %th.col-xs-2= "Price"
            %th.col-xs-2= "Team"
        %tbody=# render @player.players
  .col-xs-12
    %h1= "Acumulats 2015"
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %thead.sortable
          %tr
            %th.col-xs-2= "ID"
            %th.col-xs-2= "Jornada"
            %th.col-xs-2= "Equip"
            %th.col-xs-2= "Rival"
            %th.col-xs-2= "Acumulats Fets"
            %th.col-xs-2= "Acumulats Rebuts"
        %tbody=# render @player.statistics.player.where(season: "2015").order(:game_number)
  .col-xs-12
    %h1= "Acumulats 2014"
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %thead.sortable
          %tr
            %th.col-xs-2= "ID"
            %th.col-xs-2= "Jornada"
            %th.col-xs-2= "Equip"
            %th.col-xs-2= "Rival"
            %th.col-xs-2= "Acumulats Fets"
            %th.col-xs-2= "Acumulats Rebuts"
        %tbody=# render @player.statistics.player.where(season: "2014").order(:game_number)